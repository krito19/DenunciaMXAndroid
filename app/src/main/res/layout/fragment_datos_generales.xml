<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.syca.apps.gob.denunciamx.ui.DatosGeneralesFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingRight="5dp"
        android:paddingLeft="5dp">
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/title_datos_generales"
                        android:padding="10dp"/>
                    <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/title_desea_presentar_su_queja"
                            android:padding="10dp"/>

                    <RadioGroup
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="10dp">

                       <RadioButton
                           android:layout_width="wrap_content"
                           android:layout_height="fill_parent"
                           android:text="SI"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="NO"/>
                        </RadioGroup>


                <EditText
                    android:id="@+id/edt_que_denuncia"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/title_que"
                    android:isScrollContainer="true"
                    android:minLines="3"
                    android:maxLines="5"
                    android:padding="10dp"/>
                <EditText
                    android:id="@+id/edt_donde_denuncia"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/title_donde"
                    android:isScrollContainer="true"
                    android:minLines="3"
                    android:maxLines="5"/>
                <EditText
                    android:id="@+id/edt_cuando_denuncia"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/title_cuando"
                    android:isScrollContainer="true"
                    android:minLines="3"
                    android:maxLines="5"
                    android:padding="10dp"/>
                <EditText
                    android:id="@+id/edt_como_denuncia"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/title_como"
                    android:isScrollContainer="true"
                    android:minLines="3"
                    android:maxLines="5"
                    android:padding="10dp"/>
                <EditText
                    android:id="@+id/edt_quienes_denuncia"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/title_quienes"
                    android:isScrollContainer="true"
                    android:minLines="3"
                    android:maxLines="5"
                    android:padding="10dp"/>
                <EditText
                    android:id="@+id/edt_servicio_denuncia"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/title_que_servicio"
                    android:isScrollContainer="true"
                    android:minLines="3"
                    android:maxLines="5"
                    android:padding="10dp"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>
