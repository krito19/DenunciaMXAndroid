<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <LinearLayout
        android:layout_width="88dp"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:gravity="center">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="FECHA"
                android:gravity="center"
                android:textColor="#fff"
                />
            </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="2dp"
            android:paddingRight="2dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="2dp">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="20"
                    android:textSize="32sp"
                    android:id="@+id/txt_day_denuncia"
                    android:textColor="#fff"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:orientation="vertical"
                android:layout_marginLeft="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Oct"
                    android:textSize="18dp"
                    android:id="@+id/txt_month_denuncia"
                    android:textColor="#fff"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2014"
                    android:id="@+id/txt_year_denuncia"
                    android:textColor="#fff"/>
                </LinearLayout>


            
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="20dp">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="MI DENUNCIA 1"
                android:textSize="18dp"
                android:id="@+id/txt_title_denuncia"
                android:textColor="#fff"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Folio : "
                android:textColor="#fff"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Folio"
                android:id="@+id/txt_denuncia_folio_interno"
                android:textColor="#fff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Estatus : "
                android:textColor="#fff"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Denuncia en proceso"
                android:id="@+id/txt_denuncia_status"
                android:textColor="#fff"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>